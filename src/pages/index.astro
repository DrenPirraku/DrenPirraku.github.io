<!-- Cookie Banner JavaScript -->
<script>
    // Check if user has already made a cookie choice
    function getCookie(name) {
        const value = `; ${document.cookie}`;
        const parts = value.split(`; ${name}=`);
        if (parts.length === 2) return parts.pop().split(';').shift();
    }

    function setCookie(name, value, days) {
        const date = new Date();
        date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
        const expires = `expires=${date.toUTCString()}`;
        document.cookie = `${name}=${value};${expires};path=/;SameSite=Strict`;
    }

    // Show cookie banner if no consent exists
    const cookieConsent = getCookie('cookie_consent');
    const cookieBanner = document.getElementById('cookie-banner');
    const cookieModal = document.getElementById('cookie-modal');

    if (!cookieConsent) {
        cookieBanner.style.display = 'block';
    }

    // Accept all cookies
    document.getElementById('accept-all-cookies').addEventListener('click', function() {
        setCookie('cookie_consent', 'all', 365);
        setCookie('analytics_consent', 'true', 365);
        cookieBanner.style.display = 'none';
        // Initialize Google Analytics here if needed
        console.log('All cookies accepted');
    });

    // Accept only necessary cookies
    document.getElementById('accept-necessary-cookies').addEventListener('click', function() {
        setCookie('cookie_consent', 'necessary', 365);
        setCookie('analytics_consent', 'false', 365);
        cookieBanner.style.display = 'none';
        console.log('Only necessary cookies accepted');
    });

    // Open customization modal
    document.getElementById('customize-cookies').addEventListener('click', function() {
        cookieModal.style.display = 'block';
        cookieBanner.style.display = 'none';
    });

    // Close modal
    document.getElementById('close-modal').addEventListener('click', function() {
        cookieModal.style.display = 'none';
        cookieBanner.style.display = 'block';
    });

    // Save custom preferences
    document.getElementById('save-preferences').addEventListener('click', function() {
        const analyticsChecked = document.getElementById('analytics-cookies').checked;
        
        setCookie('cookie_consent', analyticsChecked ? 'custom' : 'necessary', 365);
        setCookie('analytics_consent', analyticsChecked ? 'true' : 'false', 365);
        
        cookieModal.style.display = 'none';
        
        if (analyticsChecked) {
            // Initialize Google Analytics here if needed
            console.log('Analytics cookies enabled');
        }
        
        console.log('Custom preferences saved');
    });

    // Close modal when clicking outside
    cookieModal.addEventListener('click', function(e) {
        if (e.target === cookieModal) {
            cookieModal.style.display = 'none';
            cookieBanner.style.display = 'block';
        }
    });
</script>

